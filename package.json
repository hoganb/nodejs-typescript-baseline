{
  "name": "nodejs-typescript-baseline",
  "version": "1.0.0",
  "description": "Node.js TypeScript baseline project setup [nodejs, typescript, baseline]",
  "scripts": {
    "build": "npm-run-all --parallel build:ts build:es",
    "build:ts": "tsc",
    "build:es": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=dist --minify --sourcemap",
    "clean": "rimraf dist node_modules reports tsconfig.tsbuildinfo stryker-tmp logs",
    "lint": "eslint --ext ts src test && prettier --check . && cspell \"**\" --dot --exclude .git --gitignore",
    "lint:fix": "eslint --ext ts src test --fix && prettier --write .",
    "test": "npm run test:unit",
    "test:mutation": "stryker run",
    "test:unit": "jest --config ./jest.config.js --runInBand",
    "test:unit:watch": "jest --config ./jest.config.js --runInBand --watchAll"
  },
  "dependencies": {
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^6.3.0",
    "@stryker-mutator/jest-runner": "^6.3.0",
    "@stryker-mutator/typescript-checker": "^6.3.0",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cspell": "^6.13.3",
    "esbuild": "^0.17.19",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-functional": "^4.4.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^14.0.1",
    "jest-mock-extended": "^3.0.1",
    "nock": "^13.2.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.5.1"
  }
}
